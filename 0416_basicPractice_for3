import java.util.Scanner;


class Main {
  public static void main(String[] args) {
   Scanner sc = new Scanner(System.in);
   System.out.println("1부터 n까지의 합:");
  
   int x = sc.nextInt();
   int sum = 0;
  

   for (int i = 1; i < x; i++){
    sum = sum+i;
    System.out.print(i +"+");
    
   }
 
   System.out.println(x+"="+(sum+x));

    
  }
}
