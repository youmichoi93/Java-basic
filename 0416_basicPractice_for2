import java.util.Scanner;


class Main {
  public static void main(String[] args) {
   Scanner sc = new Scanner(System.in);
   System.out.println("숫자입력:");
  
   int x = sc.nextInt();
   int sum = 0;
  

   for (int i = 1; i <= x; i++){
     sum = sum+i;
    
    
   }
   
   System.out.println("1부터"+x+"까지의 합은"+sum+"입니다.");

    
  }
}
